<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="controller_default">#FFF</color>
    <dimen name="size_action_button_background">150dp</dimen>
    <dimen name="size_action_button_item">65dp</dimen>
    <dimen name="size_direction_button_background">210dp</dimen>
    <dimen name="size_direction_button_item">70dp</dimen>
    <integer name="background_viewportsize">100</integer>
    <integer name="item_viewportsize">30</integer>
    <integer name="vector_stroke_width">2</integer>
    <string name="vectorpath_action_background" translatable="false">M50,50 m-15,-15 a 20,20 0 1,1 30,0 a 20,20 0 1,1 0,30 a 20,20 0 1,1 -30,0 a 20,20 0 1,1 0,-30z</string>
    <string name="vectorpath_action_item_pressed" translatable="false">M0,15 a 15,15 0 1,1 30,0 a 15,15 0 1,1 -30,0z</string>
    <string name="vectorpath_action_item_usual" translatable="false">M1,15 a 14,14 0 1,1 28,0 a 14,14 0 1,1 -28,0z</string>
    <string name="vectorpath_direction_background" translatable="false">M1,29 l28,0 l0,-28 l42,0 l0,28 l28,0 l0,42 l-28,0 l0,28 l-42,0 l0,-28 l-28,0 l0,-42z</string>
    <string name="vectorpath_direction_down" translatable="false">M15,1 m2,2 l8,8 l0,14 a17,17 0 0,1 -20,0 l0,-14 l8,-8 a3,3 0 0,1 4,0z</string>
    <string name="vectorpath_direction_left" translatable="false">M29,15 m-2,-2 l-8,-8 l-14,0 a17,17 0 0,0 0,20 l14,0 l8,-8 a3,3 0 0,0 0,-4z</string>
    <string name="vectorpath_direction_right" translatable="false">M1,15 m2,-2 l8,-8 l14,0 a17,17 0 0,1 0,20 l-14,0 l-8,-8 a3,3 0 0,1 0,-4z</string>
    <string name="vectorpath_direction_up" translatable="false">M15,29 m-2,-2 l-8,-8 l0,-14 a17,17 0 0,1 20,0 l0,14 l-8,8 a3,3 0 0,1 -4,0z</string>
    <style name="default_actionview">
        <!-- InputView -->
        <item name="inputBackground">@drawable/action_background</item>
        <item name="mode">multi</item>
        <item name="rotateButtons">45.0</item>
        <item name="vibrate">false</item>
        <item name="deadZone">0.3</item>
        <item name="buttonCenterDistance">0.571</item>
        <!-- ActionView -->
        <item name="button1_enabled">@drawable/action_pressed_blue</item>
        <item name="button1_pressed">@drawable/action_usual_blue</item>
        <item name="button2_enabled">@drawable/action_pressed_yellow</item>
        <item name="button2_pressed">@drawable/action_usual_yellow</item>
        <item name="button3_enabled">@drawable/action_pressed_green</item>
        <item name="button3_pressed">@drawable/action_usual_green</item>
        <item name="button4_enabled">@drawable/action_pressed_red</item>
        <item name="button4_pressed">@drawable/action_usual_red</item>
    </style>
    <style name="default_directionview">
        <!-- InputView -->
        <item name="inputBackground">@drawable/direction_background</item>
        <item name="rotateButtons">22.5</item>
        <item name="mode">single</item>
        <item name="deadZone">0.3</item>
        <item name="vibrate">false</item>
        <item name="buttonCenterDistance">0.45</item>
        <!-- DirectionView -->
        <item name="diagonal_mode">true</item>
        <item name="button_r_normal">@drawable/direction_right_usual</item>
        <item name="button_r_pressed">@drawable/direction_right_pressed</item>
        <item name="button_d_normal">@drawable/direction_down_usual</item>
        <item name="button_d_pressed">@drawable/direction_down_pressed</item>
        <item name="button_l_normal">@drawable/direction_left_usual</item>
        <item name="button_l_pressed">@drawable/direction_left_pressed</item>
        <item name="button_u_normal">@drawable/direction_up_usual</item>
        <item name="button_u_pressed">@drawable/direction_up_pressed</item>
    </style>
    <declare-styleable name="ActionView">
        <attr format="reference" name="button1_enabled"/>
        <attr format="reference" name="button2_enabled"/>
        <attr format="reference" name="button3_enabled"/>
        <attr format="reference" name="button4_enabled"/>
        <attr format="reference" name="button1_pressed"/>
        <attr format="reference" name="button2_pressed"/>
        <attr format="reference" name="button3_pressed"/>
        <attr format="reference" name="button4_pressed"/>
    </declare-styleable>
    <declare-styleable name="DirectionView">
        <attr format="boolean" name="diagonal_mode"/>
        <attr format="reference" name="button_r_normal"/>
        <attr format="reference" name="button_r_pressed"/>
        <attr format="reference" name="button_dr_normal"/>
        <attr format="reference" name="button_dr_pressed"/>
        <attr format="reference" name="button_d_normal"/>
        <attr format="reference" name="button_d_pressed"/>
        <attr format="reference" name="button_dl_normal"/>
        <attr format="reference" name="button_dl_pressed"/>
        <attr format="reference" name="button_l_normal"/>
        <attr format="reference" name="button_l_pressed"/>
        <attr format="reference" name="button_ul_normal"/>
        <attr format="reference" name="button_ul_pressed"/>
        <attr format="reference" name="button_u_normal"/>
        <attr format="reference" name="button_u_pressed"/>
        <attr format="reference" name="button_ur_normal"/>
        <attr format="reference" name="button_ur_pressed"/>
    </declare-styleable>
    <declare-styleable name="InputView">
        <attr format="reference" name="inputBackground"/>
        <attr format="float" name="deadZone"/>
        <attr format="float" name="buttonCenterDistance"/>
        <attr format="float" name="rotateButtons"/>
        <attr format="boolean" name="vibrate"/>
        <attr format="boolean" name="debug_drawDeadZone"/>
        <attr format="boolean" name="debug_drawPieces"/>
        <attr format="enum" name="mode">
            <enum name="single" value="0"/>
            <enum name="multi" value="1"/>
        </attr>
    </declare-styleable>
</resources>