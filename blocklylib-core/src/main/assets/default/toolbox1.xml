<!-- toolbox1 => level1 -->
<toolbox>
    <category name="반복" colour="#000000">
        <block type="controls_repeat_ext">
            <value name="TIMES">
                <shadow type="math_number">
                    <field name="NUM">10</field>
                </shadow>
            </value>
        </block>


        <block type="controls_whileUntil">
            <value name="BOOL">
                <block type="logic_boolean">
                    <field name="BOOL">TRUE</field>
                </block>
            </value>
        </block>
    </category>

    <category name="조건" colour="#000000">
        <block type="controls_if"></block>
        <block type="controls_ifelse"></block>
    </category>
    <category name="비교" colour="#000000">
        <block type="logic_compare"></block>
        <block type="logic_operation"></block>
    </category>
    <category name="계산" colour="#000000">
        <block type="math_number"></block>
        <block type="math_arithmetic">
            <value name="A">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="B">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
        </block>
        <block type="math_random_int">
            <value name="FROM">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
            <value name="TO">
                <shadow type="math_number">
                    <field name="NUM">100</field>
                </shadow>
            </value>
        </block>
    </category>

    <category name="티팅" colour="#000000">
        <block type="base_delay">
            <value name="DELAY_TIME">
                <shadow type="math_number">
                    <field name="NUM">1</field>
                </shadow>
            </value>
        </block>
        <block type="weeemake_motor"></block>
        <block type="weeemake_buzzer"></block>

        <block type="weeemake_boardRGB">
            <value name="COLOR">
                <block type="colour_picker">
                    <field name="COLOUR">#ff0000</field>
                </block>
            </value>
        </block>
    </category>


    <category name="행동" colour="#000000">
        <block type="field_image"></block>
    </category>
    <category name="자료" colour="#000000" custom="VARIABLE" />
    <!--<category name="Functions" colour="290" custom="PROCEDURE" />-->
</toolbox>
